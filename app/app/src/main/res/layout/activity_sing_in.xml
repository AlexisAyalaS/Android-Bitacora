<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.redli.bitacoraliauaem.SingInActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jose Hernandez Gonsalez" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usuario:"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/etUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lextonik" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NÂº Cuenta / Matricula:"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/etNumberAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="1126397"
        android:inputType="number" />


    <Button
        android:id="@+id/btSingIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrarse" />


</LinearLayout>
